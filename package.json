{
  "name": "next-model-knex-connector",
  "version": "0.3.3",
  "description": "SQL connector for next-model package using Knex.",
  "author": "Tamino Martinius <dev@zaku.eu>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamino-martinius/node-next-model-knex-connector.git"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "watch": {
    "lint": {
      "patterns": [
        "."
      ],
      "extensions": [
        "js"
      ],
      "inherit": true
    },
    "test": {
      "patterns": [
        "."
      ],
      "extensions": [
        "js"
      ],
      "inherit": true
    }
  },
  "scripts": {
    "coverage": "rm -rf coverage* && jest --coverage --verbose && node remap_coverage.js && rm -rf coverage_jest_raw*",
    "test": "jest --verbose",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/lodash": "^4.14.77",
    "@types/node": "^8.0.33",
    "@types/pluralize": "0.0.27",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "bdd-lazy-var": "^1.2.0",
    "eslint": "^2.13.1",
    "expect.js": "^0.3.1",
    "jest": "^21.2.1",
    "mocha": "^3.0.2",
    "next-model": "git://github.com/tamino-martinius/node-next-model.git#typescript-experimental",
    "npm-watch": "^0.3.0",
    "remap-istanbul": "^0.9.5",
    "sinon": "^1.17.7",
    "sqlite3": "^3.1.8",
    "ts-jest": "^21.1.2",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "lodash": "^4.12.0",
    "inflection": "^1.10.0",
    "knex": "^0.12.6"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageDirectory": "coverage_jest_raw"
  }
}
